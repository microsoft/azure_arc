{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "value": "<name of your Azure Arc enabled server" // Arc VM name as it is registered in ARM
        },
        "location": {
            "value": "<your region>" // Azure Region where the Arc VM is registered
        },
