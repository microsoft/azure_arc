{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "value": "arc-aws-demo" //Arc VM name as it is registered in ARM
        },
        "location": {
            "value": "westus2" //Azure Region where the Arc VM is registered
        },
        "fileUris": {
            "value": [
                "install-nginx.sh" //public URL for your script, can point to GitHub repository or an Azure Storage Account
            ]
        },
        "commandToExecute": {
            "value": "<command_to_run_script>" //command that will trigger the script
        }
    }
}
