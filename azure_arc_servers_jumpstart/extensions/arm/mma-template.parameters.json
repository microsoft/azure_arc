{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "value": "<VMName>" //name of your Azure Arc connected VM as shown in the portal 
        },
        "location": {
            "value": "<Location value>" //Azure Region where the Azure Arc VM is registered 
        },
        "workspaceId": {
            "value": "<workspaceID Value>" //ID of the workspace to configure the MMA agent 
        },
        "workspaceKey": {
            "value": "<key value>" //Key of the workspace to configure the MMA agent 
        }
    }
}