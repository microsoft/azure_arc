{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "value": "ArcWorkspaceDemo34" // Name for your Log Analytics workspace
        },
        "sku": {
            "value": "pergb2018" // SKU, leave default
