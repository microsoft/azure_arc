{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "The Name of the Vnet"
            },
            "defaultValue": "arcarodemo"
        },
        "VNetAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "The CIDR block for the VNET in which Openshift Cluster is going to be deployed into"
            },
            "defaultValue": "10.0.0.0/22"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-10-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('vnetName'), '-', 'vnet')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VNetAddressPrefix')]"
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2018-10-01",
                    "type": "subnets",
                    "location": "[resourceGroup().location]",
                    "name": "master-subnet",
                    "dependsOn": [
                        "[concat(parameters('vnetName'), '-', 'vnet')]"
                    ],
                    "properties": {
                        "addressPrefix": "10.0.0.0/23",
                        "privateLinkServiceNetworkPolicies": "Disabled",
                        "serviceEndpoints": [
                            {
                                "service": "Microsoft.ContainerRegistry"
                            }
                        ]
                    }
                },
                {
                    "apiVersion": "2018-10-01",
                    "type": "subnets",
                    "location": "[resourceGroup().location]",
                    "name": "worker-subnet",
                    "dependsOn": [
                        "[concat(parameters('vnetName'), '-', 'vnet')]",
                        "master-subnet"
                    ],
                    "properties": {
                        "addressPrefix": "10.0.2.0/23",
                        "serviceEndpoints": [
                            {
                                "service": "Microsoft.ContainerRegistry"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}
