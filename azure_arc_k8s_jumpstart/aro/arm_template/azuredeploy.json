{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "The Name of the Vnet"
            },
            "defaultValue": "arcarodemo"
        },
        "clusterName": {
            "type": "string",
            "metadata": {
                "description": "Name of the RedHat Openshift Container Cluster"
            },
            "defaultValue": "arcarodemo"
        },
        "VNetAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "The CIDR block for the VNET in which Openshift Cluster is going to be deployed into"
            },
            "defaultValue": "10.0.0.0/22"
        },
        "aadTenantId": {
            "type": "string",
            "metadata": {
                "description": "The ID of an Azure Active Directory tenant"
            }
        },
        "aadClientId": {
            "type": "string",
            "metadata": {
                "description": "The ID of an Azure Active Directory client application"
            }
        },
        "aadClientSecret": {
            "type": "string",
            "metadata": {
                "description": "The secret of an Azure Active Directory client application"
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2018-10-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('vnetName'), '-', 'vnet')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VNetAddressPrefix')]"
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2018-10-01",
                    "type": "subnets",
                    "location": "[resourceGroup().location]",
                    "name": "master-subnet",
                    "dependsOn": [
                        "[concat(parameters('vnetName'), '-', 'vnet')]"
                    ],
                    "properties": {
                        "addressPrefix": "10.0.0.0/23",
                        "privateLinkServiceNetworkPolicies": "Disabled"
                    }
                },
                {
                    "apiVersion": "2018-10-01",
                    "type": "subnets",
                    "location": "[resourceGroup().location]",
                    "name": "worker-subnet",
                    "dependsOn": [
                        "[concat(parameters('vnetName'), '-', 'vnet')]",
                        "master-subnet"
                    ],
                    "properties": {
                        "addressPrefix": "10.0.2.0/23",
                        "serviceEndpoints": [
                            {
                                "service": "Microsoft.ContainerRegistry"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "apiVersion": "2019-04-30",
            "type": "Microsoft.ContainerService/openShiftManagedClusters",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('vnetName'), '-', 'vnet'))]"
            ],
            "name": "[parameters('clusterName')]",
            "properties": {
                "openShiftVersion": "v3.11",
                "networkProfile": {
                    "vnetCidr": "[parameters('VNetAddressPrefix')]",
                    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('vnetName'), '-', 'vnet'))]"
                },
                "authProfile": {
                    "identityProviders": [
                        {
                            "name": "Azure AD",
                            "provider": {
                                "kind": "AADIdentityProvider",
                                "tenantId": "[parameters('aadTenantId')]",
                                "clientId": "[parameters('aadClientId')]",
                                "secret": "[parameters('aadClientSecret')]"
                            }
                        }
                    ]
                },
                "masterPoolProfile": {
                    "name": "master",
                    "count": 3,
                    "subnetCidr": "10.0.0.0/23",
                    "vmSize": "Standard_D4s_v3",
                    "osType": "Linux"
                },
                "agentPoolProfiles": [
                    {
                        "role": "infra",
                        "name": "infra",
                        "count": 3,
                        "subnetCidr": "10.0.0.0/23",
                        "vmSize": "Standard_D4s_v3",
                        "osType": "Linux"
                    },
                    {
                        "role": "compute",
                        "name": "compute",
                        "count": 3,
                        "subnetCidr": "10.0.0.0/23",
                        "vmSize": "Standard_D4s_v3",
                        "osType": "Linux"
                    }
                ],
                "routerProfiles": [
                    {
                        "name": "default"
                    }
                ]
            }
        }
    ]
}
