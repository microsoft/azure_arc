{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "spnClientId": {
      "type": "string",
      "metadata": {
        "description": "Azure service principal client id"
      }
    },
    "spnTenantId": {
      "type": "string",
      "metadata": {
        "description": "Azure AD tenant id for your service principal"
      }
    },
    "flavor": {
      "type": "string",
      "defaultValue": "Full",
      "allowedValues": [
        "Full",
        "ITPro",
        "DevOps"
      ],
      "metadata": {
        "description": "The flavor of ArcBox you want to deploy. Valid values are: 'Full', 'ITPro', 'DevOps'"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure Region to deploy the Log Analytics Workspace"
      }
    }
  },
  "resources": [
    {
      "condition": "[equals(parameters('flavor'), 'DevOps')]",
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2021-11-01-preview",
      "name": "[format('kv-arcbox-{0}', uniqueString(resourceGroup().id))]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[parameters('spnTenantId')]",
        "accessPolicies": [
          {
            "objectId": "[parameters('spnClientId')]",
            "permissions": {
              "certificates": [
                "all"
              ],
              "keys": [
                "all"
              ],
              "secrets": [
                "all"
              ],
              "storage": [
                "all"
              ]
            },
            "tenantId": "[parameters('spnTenantId')]"
          }
        ]
      }
    }
  ]
}