            "apiVersion": "2019-09-01",
            "identity": {
                "type": "SystemAssigned"
            },
            "location": "[parameters('azureLocation')]",
            "properties": {
                "scope": "[subscriptionResourceId('Microsoft.Resources/resourceGroups', resourceGroup().name)]",
