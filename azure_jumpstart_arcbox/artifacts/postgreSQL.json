{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "resourceGroup": {
      "type": "string"
    },
    "dataControllerId": {
      "type": "string"
    },
    "customLocation": {
      "type": "string"
    },
    "subscriptionId": {
      "type": "string"
    },
    "admin": {
      "type": "string"
    },
    "password": {
      "type": "securestring"
    },
    "namespace": {
      "type": "string"
    },
    "serviceType": {
      "type": "string"
    },
    "coordinatorCoresRequest": {
      "type": "string"
    },
    "coordinatorCoresLimit": {
      "type": "string"
    },
    "coordinatorMemoryRequest": {
      "type": "string"
    },
    "coordinatorMemoryLimit": {
      "type": "string"
    },
    "postgresEngineVersion": {
      "type": "int"
    },
    "dataStorageSize": {
      "type": "string"
    },
    "dataStorageClassName": {
      "type": "string"
    },
    "logsStorageSize": {
      "type": "string"
    },
    "logStorageClassName": {
      "type": "string"
    },
    "resourceTags": {
      "type": "object"
    },
    "numWorkers": {
      "type": "int"
    },
    "apiVersion": {
      "type": "string"
    }
  },
  "variables": {},
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.AzureArcData/postgresInstances",
      "apiVersion": "[parameters('apiVersion')]",
      "name": "jumpstartps",
      "location": "[parameters('location')]",
      "extendedLocation": {
        "type": "CustomLocation",
        "name": "[parameters('customLocation')]"
      },
      "tags": "[parameters('resourceTags')]",
      "properties": {
        "admin": "[parameters('admin')]",
        "basicLoginInformation": {
          "username": "[parameters('admin')]",
          "password": "[parameters('password')]"
        },
        "k8sRaw": {
          "kind": "postgresql",
          "spec": {
            "engine": {
              "version": "[parameters('postgresEngineVersion')]"
            },
            "scale": {
              "workers": "[parameters('numWorkers')]"
            },
            "scheduling": {
                "default": {
                    "resources": {
                        "requests": {
                            "memory": "0.25Gi"
                        }
                    }
                },
                "roles": {
                    "coordinator": {
                        "resources": {
                            "requests": {
                                "memory": "[parameters('coordinatorMemoryRequest')]",
                                "cpu": "[parameters('coordinatorCoresRequest')]"
                            },
                            "limits": {
                                "cpu": "[parameters('coordinatorCoresLimit')]",
                                "memory": "[parameters('coordinatorMemoryLimit')]"
                            }
                        }
                    },
                    "worker": {
                        "resources": {
                            "requests": {},
                            "limits": {}
                        }
                    }
                }
          },
            "services": {
              "primary": {
                "type": "[parameters('serviceType')]",
                "port": 15432
              }
            },
            "storage": {
              "data": {
                "volumes": [
                  {
                    "className": "[parameters('dataStorageClassName')]",
                    "size": "[parameters('dataStorageSize')]"
                  }
                ]
              },
              "logs": {
                "volumes": [
                  {
                    "className": "[parameters('logStorageClassName')]",
                    "size": "[parameters('logsStorageSize')]"
                  }
                ]
              }
            },
            "settings": {
              "azure": {
                "subscription": "[parameters('subscriptionId')]",
                "resourceGroup": "[parameters('resourceGroup')]",
                "location": "[parameters('location')]"
              }
            }
          },
          "metadata": {
            "namespace": "[parameters('namespace')]"
          },
          "status": {}
        },
        "dataControllerId": "[parameters('dataControllerId')]"
      }
    }
  ],
  "outputs": {}
}
