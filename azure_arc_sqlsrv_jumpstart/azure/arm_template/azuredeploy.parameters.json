{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmSize": {
      "value": "<VM size>"
    },
    "vmName": {
      "value": "<VM Name>"
    },
    "adminUsername": {
      "value": "<Windows VM admin username>"
    },
    "adminPassword": {
      "value": "<Windows VM admin password>"
    },
    "resourceGroup": {
      "value": "<Azure resource group where all resource to be deployed>"
    },
    "servicePrincipalAppId": {
      "value": "<Azure service principal name>"
    },
    "servicePrincipalSecret": {
      "value": "<Azure service principal password>"
    },
    "servicePrincipalTenantId": {
      "value": "<Azure tenant ID>"
    },
    "subId": {
      "value": "<Azure subscription ID>"
    },
    "location": {
      "value": "<Azure region>"
    },
    "deployBastion": {
      "value": "<true | false>"
    },
    "bastionHostName": {
      "value": "<Azure Bastion Host name>"
    }
  }
}
